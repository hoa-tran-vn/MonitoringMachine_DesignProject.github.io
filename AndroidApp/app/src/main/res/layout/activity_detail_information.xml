<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:transitionName="Information_Btn_transition"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DetailInformation">

    <RelativeLayout
        android:id="@+id/Relate_layout_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="20dp"
        android:background="@color/CardBackGround_four_opt_one"
        >

        <ImageView
            android:onClick="Back"
            android:id="@+id/MachineDetail_backBtn"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:background="@drawable/back_button_shape"
            android:src="@drawable/back_icon" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Relate_layout_one"
        android:layout_marginBottom="50dp"
        android:background="@color/BackGround_four"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:orientation="vertical"
            >

            <LinearLayout
                android:padding="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_shape"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/DetailInfor_DayCardOne"
                    android:layout_marginRight="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/barlow_medium"
                    android:text="27-July"
                    android:textAlignment="textEnd"
                    android:textColor="@color/TextColor_four_opt_two"
                    android:textSize="20sp" />

                <TextView
                    android:layout_marginRight="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/barlow_light"
                    android:text= "Machine status in a day"
                    android:textAlignment="textEnd"
                    android:textColor="@color/TextColor_four_opt_two"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Machine Id"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="@font/barlow_medium"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/ButtonColor_four"/>

                <TextView
                    android:id="@+id/DetailInfor_MachineID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Widget.AppCompat.Spinner.Underlined"
                    android:text="K1912"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/TextColor_four_opt_two"
                    android:fontFamily="@font/barlow_light"
                    android:textSize="20sp"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Machine Status"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="@font/barlow_medium"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/ButtonColor_four"/>

                <TextView
                    android:id="@+id/DetailInfor_MachineStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Widget.AppCompat.Spinner.Underlined"
                    android:text="Run"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/TextColor_four_opt_two"
                    android:fontFamily="@font/barlow_light"
                    android:textSize="20sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Machine Start Time"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="@font/barlow_medium"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/ButtonColor_four"/>

                <TextView
                    android:id="@+id/DetailInfor_MachineStartTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Widget.AppCompat.Spinner.Underlined"
                    android:text="8am"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/TextColor_four_opt_two"
                    android:fontFamily="@font/barlow_light"
                    android:textSize="20sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Machine Error"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="@font/barlow_medium"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/ButtonColor_four"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Widget.AppCompat.Spinner.Underlined"
                    android:text="None"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/TextColor_four_opt_two"
                    android:fontFamily="@font/barlow_light"
                    android:textSize="20sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Machine Origine"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="@font/barlow_medium"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/ButtonColor_four"/>

                <TextView
                    android:id="@+id/DetailInfor_MachineOrigin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Widget.AppCompat.Spinner.Underlined"
                    android:text="China"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/TextColor_four_opt_two"
                    android:fontFamily="@font/barlow_light"
                    android:textSize="20sp"/>

            </LinearLayout>

            <LinearLayout
                android:padding="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_shape"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/DetailInfor_DayCardTwo"
                    android:layout_marginRight="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/barlow_medium"
                    android:text="27-July"
                    android:textAlignment="textEnd"
                    android:textColor="@color/TextColor_four_opt_two"
                    android:textSize="20sp" />

                <TextView
                    android:layout_marginRight="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/barlow_light"
                    android:text= "Employee information"
                    android:textAlignment="textEnd"
                    android:textColor="@color/TextColor_four_opt_two"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Employee Name"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="@font/barlow_medium"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/ButtonColor_four"/>

                <TextView
                    android:id="@+id/DetailInfor_WorkerName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Widget.AppCompat.Spinner.Underlined"
                    android:text="Daniel"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/TextColor_four_opt_two"
                    android:fontFamily="@font/barlow_light"
                    android:textSize="20sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Employee ID"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="@font/barlow_medium"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/ButtonColor_four"/>

                <TextView
                    android:id="@+id/DetailInfor_WorkerID"
                    style="@style/Widget.AppCompat.Spinner.Underlined"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/barlow_light"
                    android:text="1922"
                    android:textColor="@color/TextColor_four_opt_two"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Employee phone"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="@font/barlow_medium"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/ButtonColor_four"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Widget.AppCompat.Spinner.Underlined"
                    android:text="092244122"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/TextColor_four_opt_two"
                    android:fontFamily="@font/barlow_light"
                    android:textSize="20sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Employee email"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="@font/barlow_medium"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/ButtonColor_four"/>

                <TextView
                    android:id="@+id/DetailInfor_WorkerEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Widget.AppCompat.Spinner.Underlined"
                    android:text="Support@gmail.com"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/TextColor_four_opt_two"
                    android:fontFamily="@font/barlow_light"
                    android:textSize="20sp"/>

            </LinearLayout>

            <LinearLayout
                android:padding="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_shape"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/DetailInfor_DayCardThree"
                    android:layout_marginRight="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/barlow_medium"
                    android:text="27-July"
                    android:textAlignment="textEnd"
                    android:textColor="@color/TextColor_four_opt_two"
                    android:textSize="20sp" />

                <TextView
                    android:layout_marginRight="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/barlow_light"
                    android:text= "Machine products"
                    android:textAlignment="textEnd"
                    android:textColor="@color/TextColor_four_opt_two"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Product Name"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="@font/barlow_medium"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/ButtonColor_four"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Widget.AppCompat.Spinner.Underlined"
                    android:text="Hard solid steel"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/TextColor_four_opt_two"
                    android:fontFamily="@font/barlow_light"
                    android:textSize="20sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Product ID"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="@font/barlow_medium"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/ButtonColor_four"/>

                <TextView
                    android:id="@+id/DetailInfor_ProductID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Widget.AppCompat.Spinner.Underlined"
                    android:text="K88222"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/TextColor_four_opt_two"
                    android:fontFamily="@font/barlow_light"
                    android:textSize="20sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Product number"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="@font/barlow_medium"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/ButtonColor_four"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Widget.AppCompat.Spinner.Underlined"
                    android:text="20"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/TextColor_four_opt_two"
                    android:fontFamily="@font/barlow_light"
                    android:textSize="20sp"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/DetailInfor_bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        app:menu="@menu/bottom_menu"
        android:background="@color/CardBackGround_four_opt_one"
        app:itemIconTint="@color/ButtonColor_four"
        app:itemTextColor="@color/ButtonColor_four">
    </com.google.android.material.bottomnavigation.BottomNavigationView>

</RelativeLayout>